<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/androidx_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceScreen
        android:key="status_bar"
        android:title="@string/status_bar_title"
        android:fragment="com.android.settings.androidx.StatusBar"
        android:summary="@string/status_bar_summary" />

    <Preference
        android:key="notification_style"
        android:title="@string/notification_title"
        android:fragment="com.android.settings.androidx.NotificationDrawerStyle"
        android:summary="@string/notification_summary" />

    <PreferenceScreen
        android:key="power_menu"
        android:title="@string/power_menu_title"
        android:fragment="com.android.settings.androidx.PowerMenu"
        android:summary="@string/power_menu_summary" />

    <Preference
        android:key="lcd_density_setup"
        android:title="@string/lcd_density_title"
        android:summary="@string/lcd_density_summary" />

    <CheckBoxPreference
        android:key="recents_mem_display"
        android:title="@string/pref_recents_title"
        android:summary="@string/pref_recents_summary" />

    <PreferenceCategory
        android:key="category_animation_options"
        android:title="@string/display_category_animation_options_title" >

        <PreferenceScreen
            android:id="@+id/animations"
            android:title="@string/animation_manager_title"
            android:summary="@string/animation_control_summary"
            android:fragment="com.android.settings.androidx.AnimationControls" />

        <ListPreference
            android:key="system_power_crt_mode"
            android:dialogTitle="@string/system_power_crt_mode_dialog_title"
            android:title="@string/system_power_crt_mode_title"
            android:entries="@array/entries_system_power_crt_mode"
            android:entryValues="@array/values_system_power_crt_mode" />
    </PreferenceCategory>
</PreferenceScreen>
